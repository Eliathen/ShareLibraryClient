<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/dialog_current_exchange_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_current_exchange_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                tools:text="Title" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/dialog_current_exchange_details_authors_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/authors_label"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dialog_current_exchange_details_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    tools:text="Authors" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_current_exchange_details_category_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_label"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dialog_current_exchange_details_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@null"

                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    tools:text="Category" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_current_exchange_details_deposit_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp">


                <TextView
                    android:id="@+id/dialog_current_exchange_details_deposit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:text="@string/deposit_label_text"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/dialog_current_exchange_details_deposit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/gold"

                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_current_exchange_details_user_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:gravity="center_horizontal"-->
                <!--                    android:text="@string/user_details"-->
                <!--                    android:textSize="25sp" />-->

                <LinearLayout
                    android:id="@+id/current_exchange_user_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dialog_current_exchange_details_profile_imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/register_button_background"
                        android:src="@drawable/ic_person_24"
                        app:tint="@color/colorPrimaryDark"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/dialog_current_exchange_details_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="18sp"
                        tools:text="Adam" />

                    <TextView
                        android:id="@+id/dialog_current_exchange_details_user_surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        tools:text="Nowak" />

                    <ImageView
                        android:id="@+id/dialog_current_exchange_chat_imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_message_24"
                        app:tint="@color/colorPrimaryDark"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/exchange_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_exchange_24" />

            <LinearLayout
                android:id="@+id/dialog_current_exchange_second_item_deposit_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp">


                <TextView
                    android:id="@+id/dialog_current_exchange_second_item_deposit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:text="@string/deposit_label_text"
                    android:textSize="20sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/dialog_current_exchange_second_item_deposit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:textColor="@color/gold"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_current_exchange_second_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textSize="40sp"
                    tools:text="Title" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <TextView
                        android:id="@+id/dialog_current_exchange_second_item_authors_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:text="@string/authors_label"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/dialog_current_exchange_second_item__author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/gold"

                        android:textSize="18sp"
                        tools:text="Authors" />

                    <LinearLayout
                        android:id="@+id/dialog_current_exchange_second_item_category_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/category_label"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/dialog_current_exchange_second_item_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:background="@null"

                            android:textColor="@color/gold"
                            android:textSize="18sp"
                            tools:text="Category" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialog_current_exchange_second_item_user_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                    <TextView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:gravity="center_horizontal"-->
                    <!--                        android:text="@string/user_details"-->
                    <!--                        android:textSize="25sp" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/dialog_current_exchange_second_item_profile_imageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/register_button_background"
                            android:src="@drawable/ic_person_24"
                            app:tint="@color/colorPrimaryDark"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/dialog_current_exchange_second_item_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="18sp"
                            tools:text="Adam" />

                        <TextView
                            android:id="@+id/dialog_current_exchange_second_item_user_surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            tools:text="Nowak" />

                        <ImageView
                            android:id="@+id/dialog_current_exchange_chat_imageView2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_message_24"
                            app:tint="@color/colorPrimaryDark"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginHorizontal="@dimen/dp_16">

                <Button
                    android:id="@+id/current_exchange_finish_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_exchange"
                    android:layout_marginHorizontal="@dimen/dp_8" />

                <Button
                    android:id="@+id/current_exchange_cancel_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_changes"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginHorizontal="@dimen/dp_8" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>